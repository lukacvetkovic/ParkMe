<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/custom_button</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>   <!-- TODO da - ne ? -->
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/parky_text_dark_gray</item>
        <item name="android:textSize">@dimen/parky_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
